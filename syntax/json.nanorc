# Syntax definitions for JSON
syntax "json" "\.json$"

# Keywords
color blue "[[:<:]](null|true|false)[[:>:]]"

# Numbers
color magenta "[[:<:]][+-]?[1-9][0-9]*([Ee][+-]?[0-9]+)?[[:>:]]" "[[:<:]][+-]?[0](\.[0-9]+)?[[:>:]]"

# Strings
color green "\"(\\.|[^\"])*\"" "'(\\.|[^'])*'"
color brightgreen "\\u[0-9a-fA-F]{4}|\\[bfnrt/\\'\"]"

# Keys
color cyan "\"(\\\"|[^\"])*\"[[:space:]]*:"  "'(\'|[^'])*'[[:space:]]*:"

# Mixed tabs & spaces
color ,red "	+ +| +	+"
